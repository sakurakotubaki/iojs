{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "js"
  ]
}